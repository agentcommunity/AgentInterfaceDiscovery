{
  "extends": ["config:base"],
  "rangeStrategy": "bump",
  "labels": ["dependencies"],
  "packageRules": [
    {
      "updateTypes": ["major"],
      "labels": ["dependencies", "major"],
      "automerge": false
    },
    {
      "updateTypes": ["minor", "patch"],
      "automerge": true,
      "automergeType": "branch"
    }
  ]
} 