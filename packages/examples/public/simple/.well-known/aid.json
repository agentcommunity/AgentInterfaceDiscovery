{
  "name": "Simple Remote API",
  "metadata": {
    "contentVersion": "2025-06-25",
    "documentation": "https://docs.agentcommunity.org/specs/aid/spec-v1/"
  },
  "schemaVersion": "1",
  "implementations": [
    {
      "type": "remote",
      "name": "primary-api",
      "title": "Primary API Endpoint",
      "protocol": "mcp",
      "uri": "https://api.simple.agentcommunity.org/v1",
      "authentication": {
        "scheme": "pat",
        "description": "API Key provided by the service.",
        "placement": {
          "in": "header",
          "key": "Authorization",
          "format": "Bearer {token}"
        }
      }
    }
  ]
}