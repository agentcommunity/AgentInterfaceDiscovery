{
    "compilerOptions": {
      "module": "CommonJS",      // <- crucial
      "target": "ES2020",
      "moduleResolution": "node",
      "types": ["node"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "declaration": true
    },
    "include": ["src/**/*"]
  }