{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "declaration": true,
    "sourceMap": true,
    "composite": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "rootDir": ".",
    "types": ["jest", "node"]
  },
  "include": ["src", "tests"],
  "references": [
    { "path": "../core" }
  ]
} 