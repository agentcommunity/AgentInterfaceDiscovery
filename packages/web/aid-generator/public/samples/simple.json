{
  "schemaVersion": "1",
  "serviceName": "Simple Remote API",
  "domain": "simple.agentcommunity.org",
  "metadata": {
    "documentation": "https://agentcommunity.org/docs/simple"
  },
  "implementations": [
    {
      "type": "remote",
      "name": "Primary API Endpoint",
      "protocol": "mcp",
      "uri": "https://api.simple.agentcommunity.org/v1",
      "authentication": {
        "scheme": "pat",
        "description": "API Key provided by the service.",
        "placement": {
          "in": "header",
          "key": "Authorization",
          "format": "Bearer {token}"
        }
      }
    }
  ]
}